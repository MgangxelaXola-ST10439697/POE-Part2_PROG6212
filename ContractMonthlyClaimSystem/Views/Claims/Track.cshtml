@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container">
    <h2>Track Claim Status</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer Name</th>
                    <th>Total Amount</th>
                    <th>Submission Date</th>
                    <th>Status</th>
                    <th>Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.LecturerName</td>
                        <td>R @claim.TotalAmount</td>
                        <td>@claim.DateSubmitted.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock"></i> @claim.Status
                                </span>
                            }
                            else if (claim.Status == "Approved")
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> @claim.Status
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-times"></i> @claim.Status
                                </span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.FilePath))
                            {
                                <a href="@claim.FilePath" class="btn btn-sm btn-outline-primary" target="_blank">
                                    <i class="fas fa-file"></i> View
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No document</span>
                            }
                        </td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <span class="text-muted">Awaiting review</span>
                            }
                            else
                            {
                                <span class="text-success">Processed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No claims to track. <a href="@Url.Action("Submit")">Submit a claim</a> to get started.
        </div>
    }
</div>